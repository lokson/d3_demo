= simple_form_for element , url: '', html: { name: 'form' } do |f|
  = f.ng_input :name
  - if action_name == 'edit'
    = f.input :password, input_html: { 'ng-model':'element.password', value:'' }, required: false
  - if action_name == 'new'
    = f.ng_input :password

  = f.submit class:'btn btn-primary', 'ng-click':'c.save(element)', 'ng-disabled':'form.$invalid', onclick:'return false'
  - if action_name == 'edit'
    %button.btn.btn-danger{'ng-click':'c.delete(element)', onclick:'return false'} Delete
