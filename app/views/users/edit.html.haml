= simple_form_for element , url: '', html: { name: 'form' } do |f|
  = f.ng_input :name
  = f.input :password, input_html: { 'ng-model':'element.password', value:'' }, required: false
  = f.submit class:'btn btn-primary', 'ng-click':'save(element)', 'ng-disabled':'form.$invalid', onclick:'return false'
  - if element.persisted?
    %button.btn.btn-danger{'ng-click':'delete(element)', onclick:'return false'} Delete
